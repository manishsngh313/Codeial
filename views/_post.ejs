
<li id="post-<%= post._id %>">
    <p>
        <% if (locals.user && post.user.id == locals.user.id) {%>
        <small>
            <a class="delete-post-button" href="/posts/delete/<%= post._id %>">X</a>
        </small>
            
        <%}%>
        <!-- <%= post.comments %> -->
        <%= post.content %>
        <br>
        <small>
            <%= post.user.name %>
        </small>
       
       
    </p>
    <div id = 'comment-feed'>
        <% if (locals.user) {%>      
            <form action="/comments/create-comments" class = "new-comment-form" method="POST">
                <input type="text" name="content" placeholder="Type here to start comment...">
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="comment">
            </form>
            
        <% } %>
        <div class="post-comments-list">
            <ul id="post-comments-<%= post._id %>">
                <% for (comment of post.comments){%>
                    <%- include('_comment') %>
                    
                
                <%} %>
            </ul>
        </div>
    </div>

</li>
       